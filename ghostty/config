theme = catppuccin-frappe

# Font
font-family = "JetBrainsMono Nerd Font Mono"
font-size = 15
# adjust-cell-height = 30%

# Window
# gtk-single-instance = true
# gtk-tabs-location = bottom
# gtk-wide-tabs = false

# tabs
# hidden or transparent
macos-titlebar-style = hidden
# true
window-decoration = false
window-padding-color = extend-always
window-padding-x = 0
window-padding-y = 0
window-padding-balance = true
window-step-resize = true

adjust-cursor-thickness = 2

# Keybindings
# \x02 is ctrl+b (default tmux prefix)
# \x01 is ctrl+a (common alternative tmux prefix)
# \x00 is ctrl+space (common alternative tmux prefix)
# keybind = clear

keybind = ctrl+shift+h=text:\x00\x1b[D
keybind = ctrl+shift+j=text:\x00\x1b[B
keybind = ctrl+shift+k=text:\x00\x1b[A
keybind = ctrl+shift+l=text:\x00\x1b[C

keybind = super+q=quit
keybind = super+shift+r=reload_config

# tmux session | picker (sesh)
keybind = super+shift+k=text:\x00k

# tmux session | picker (window)
# keybind = super+p=text:\x00p

# tmux | toggle status bar
keybind = super+shift+s=text:\x00S

# tmux | refresh
keybind = super+r=text:\x00r

# tmux | clear
keybind = super+k=text:\x00C

# tmux split | vertically
keybind = super+d=text:\x00v

# tmux split | horizontally
keybind = super+shift+d=text:\x00s

# tmux split | toggle terminal
keybind = ctrl+`=text:\x00`

# tmux pane | new
keybind = super+t=text:\x00c

# tmux pane | last
keybind = super+l=text:\x00l

# tmux pane | last session
keybind = super+shift+l=text:\x00L

# tmux window | prev
keybind = ctrl+shift+tab=text:\x00p
keybind = super+shift+[=text:\x00p
keybind = super+shift+{=text:\x00p

# tmux window | next
keybind = ctrl+tab=text:\x00n
keybind = super+shift+]=text:\x00n
keybind = super+shift+}=text:\x00n

# tmux window | select by number
keybind = super+1=text:\x001
keybind = super+2=text:\x002
keybind = super+3=text:\x003
keybind = super+4=text:\x004
keybind = super+5=text:\x005
keybind = super+6=text:\x006
keybind = super+7=text:\x007
keybind = super+8=text:\x008
keybind = super+9=text:\x009

# Clipboard settings
clipboard-read = allow
clipboard-write = allow

# Cursor Style
cursor-style = block
cursor-style-blink = true
cursor-color = "#85c1dc"

